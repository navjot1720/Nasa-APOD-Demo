<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:paddingStart="@dimen/dimen_16dp"
                android:visibility="invisible"
                android:paddingEnd="@dimen/dimen_16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/atvSelectDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_12sp"
                    android:paddingStart="@dimen/dimen_6dp"
                    android:paddingEnd="@dimen/dimen_6dp"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp"
                    android:layout_marginTop="@dimen/dimen_14dp"
                    android:background="@drawable/drawable_select_date_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/txt_select_date" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:textSize="@dimen/text_size_12sp"
                    android:paddingStart="@dimen/dimen_6dp"
                    android:paddingEnd="@dimen/dimen_6dp"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp"
                    app:layout_constraintStart_toEndOf="@id/atvSelectDate"
                    app:layout_constraintTop_toTopOf="@id/atvSelectDate"
                    android:text="@string/txt_to_view_astronomy_pictures" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/atvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:textSize="@dimen/text_size_12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/atvSelectDate"
                    tools:text="12 Dec, 2021" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/atvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="@dimen/text_size_18sp"
                    app:fontFamily="@font/roboto_bold"
                    app:layout_constraintEnd_toEndOf="@id/sdvImage"
                    app:layout_constraintStart_toStartOf="@id/sdvImage"
                    app:layout_constraintTop_toBottomOf="@id/atvDate"
                    tools:text="@string/app_name" />


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdvImage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/atvTitle"
                    app:roundedCornerRadius="@dimen/dimen_12dp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/atvExplanation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="@dimen/text_size_16sp"
                    app:fontFamily="@font/roboto_medium"
                    app:layout_constraintEnd_toEndOf="@id/sdvImage"
                    app:layout_constraintStart_toStartOf="@id/sdvImage"
                    app:layout_constraintTop_toBottomOf="@id/sdvImage"
                    tools:text="Explanation..." />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/aivFavourite"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:padding="@dimen/dimen_5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_heart_hollow" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atvRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16dp"
            android:textColor="?attr/colorSecondaryVariant"
            android:textSize="@dimen/text_size_14sp"
            app:fontFamily="@font/roboto_bold"
            android:visibility="gone"
            android:gravity="center"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/txt_no_internet_retry" />


        <include
            android:id="@+id/progress"
            layout="@layout/layout_progressbar"
            android:visibility="gone" />

    </FrameLayout>

</layout>
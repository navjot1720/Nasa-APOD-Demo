<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.gs.nasaapod.data.database.entities.FavouritePicturesEntity" />

        <variable
            name="clickListener"
            type="com.gs.nasaapod.interfaces.FavouriteItemClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onFavouriteItemClicked(model.date)}">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginEnd="@dimen/dimen_6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/text_size_14sp"
            app:fontFamily="@font/roboto_bold"
            app:layout_constraintEnd_toStartOf="@+id/sdvImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/sdvImage"
            tools:text="@string/app_name"
            android:text="@{model.title}"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:alpha="0.8"
            android:textColor="?attr/colorPrimaryVariant"
            android:textSize="@dimen/text_size_11sp"
            app:layout_constraintStart_toStartOf="@id/atvTitle"
            app:layout_constraintTop_toBottomOf="@id/atvTitle"
            tools:text="12 Dec, 2021"
            android:text="@{model.parsedDate}"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atvExplanation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:layout_marginEnd="@dimen/dimen_6dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="?attr/colorPrimaryVariant"
            android:textSize="@dimen/text_size_13sp"
            app:fontFamily="@font/roboto_medium"
            app:layout_constraintEnd_toStartOf="@+id/sdvImage"
            app:layout_constraintStart_toStartOf="@id/atvTitle"
            app:layout_constraintTop_toBottomOf="@id/atvDate"
            tools:text="Explanation\n..."
            android:text="@{model.explanation}"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atvRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_4dp"
            android:paddingBottom="@dimen/dimen_4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/text_size_13sp"
            android:onClick="@{()->clickListener.onRemoveFavouriteClicked(model)}"
            app:layout_constraintStart_toStartOf="@id/atvTitle"
            app:layout_constraintTop_toBottomOf="@id/atvExplanation"
            android:text="@string/txt_remove" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdvImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:setImage="@{model.url}"
            app:placeholderImage="@drawable/shape_image_placeholder"
            app:roundedCornerRadius="@dimen/dimen_6dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="?attr/colorPrimaryVariant"
            app:layout_constraintEnd_toEndOf="parent"
            android:alpha="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/atvRemove" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
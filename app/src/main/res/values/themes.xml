<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.NASAAPOD" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <!--    Style for splash screen-->
    <style name="SplashStyle" parent="Theme.NASAAPOD">
        <item name="android:windowBackground">?attr/colorSecondary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">?attr/colorSecondary</item>
    </style>

    <!--    Style for DatePickerDialog-->
    <style name="DatePickerTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
    </style>

</resources>